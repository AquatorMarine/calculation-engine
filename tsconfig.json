{
  "compilerOptions": {
    "target": "ES2020",

    "module": "Node16",
    "moduleResolution": "Node16",

    "lib": ["ES2020"],
    "types": ["node"],

    "declaration": true,
    "declarationMap": true,

    "outDir": "./dist",
    "rootDir": "./",

    "strict": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
